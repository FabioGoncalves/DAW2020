extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h3.w3-left Students List (DAW2020)
      if list.length > 0
        .w3-container 
          table.w3-table-all
            tr 
              th Image
              th Number
              th Name
              th Git
              th Actions
            each s in list
              tr
                td
                  - if (s.img != "none")
                    img.image(src='/assets/' + s.img, style="width:50px;height:50px;")
                  - else
                    img.image(src='/assets/default.png', style="width:50px;height:50px;")
                td
                  a(href='/students/' + s.numero) #{s.numero} 
                td
                  a(href='/students/' + s.numero) #{s.nome} 
                td 
                  a(href='/students/' + s.numero) #{s.git} 
                td 
                  a(href='/students/edit/' + s.numero, style="font-size:20px;float:left;line-height:38px") 
                    i.fa.fa-edit(aria-hidden='true') 
                    
                  form(action="/students/delete/" + s.numero + "?_method=DELETE", method='POST')  
                    button.w3-button(type='submit', value='Submit')
                      i.fa.fa-trash(aria-hidden='true')  

          a(style="float:right", href='/addStudent') 
                    button.w3-button.w3-teal(type="button") Add Student  
      else
        .w3-container
          p There are no students...
      footer.w3-container.w3-teal

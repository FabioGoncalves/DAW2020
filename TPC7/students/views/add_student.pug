extends layout

block content
  form(action="/addStudent", method='POST', enctype="multipart/form-data")
    .w3-card-4(style="width:100%")
      header.w3-container.w3-light-grey
        h3 Add Student 
      .w3-container 
        p(style="float:left;width:50%;") Name 
          input(type='text', name='nome', value='', style="width:90%;")

        p(style="float:left;width:50%;") Number 
          input(type='text', name='numero', value='')

        p(style="float:left;width:50%;")  Link Git 
          input(type='text', name='git', value='', style="width:70%;")

        input(type='file', name='img', accept='image/*', style="float:left;width:50%;margin-top:15px;")
        
        h5(style="width:100%;float:left;") TPC's
        input#tpc(type='checkbox', name='tpc1', checked=false) 
        span TPC1 

        input#tpc(type='checkbox', name='tpc2', checked=false) 
        span TPC2 

        input#tpc(type='checkbox', name='tpc3', checked=false) 
        span TPC3 

        input#tpc(type='checkbox', name='tpc4', checked=false)
        span TPC4 

        input#tpc(type='checkbox', name='tpc5', checked=false) 
        span TPC5 

        input#tpc(type='checkbox', name='tpc6', checked=false) 
        span TPC6 

        input#tpc(type='checkbox', name='tpc7', checked=false) 
        span TPC7 

        input#tpc(type='checkbox', name='tpc8', checked=false) 
        span TPC8 
        hr
      button.w3-button.w3-block.w3-dark-grey(type='submit', value='Submit') Confirm